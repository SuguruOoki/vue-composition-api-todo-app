{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/toast",
      "jest",
      "vue-analytics",
      "@nuxtjs/sentry",
      "puppeteer",
      "jest-environment-puppeteer",
      "expect-puppeteer",
      "@nuxtjs/google-analytics"
    ]
  },
  "include": [
    "nuxt.config.ts",
    "./types/**/*",
    "./store/**/*",
    "./plugins/**/*",
    "./utils/**/*",
    "./services/**/*",
    "./test/**/*",
    "./constants/**/*"
  ]
}
